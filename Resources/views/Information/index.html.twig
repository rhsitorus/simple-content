{% extends 'RofilTemplateMasterBundle:Theme:two-column.html.twig' %}

{% block content -%}
    <h2>Daftar Information</h2>
    <hr>
                    <a href="{{ path('information_new') }}" class="btn btn-primary">Tambah Data</a>
            <hr>

    <div class="panel panel-default">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Body</th>
                    <th>Published</th>
                    <th>Createdat</th>
                    <th>Updatedat</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('information_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.body }}</td>
                    <td>{{ entity.published }}</td>
                    <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>
		                <ul>
		                    <li>
		                        <a href="{{ path('information_show', { 'id': entity.id }) }}">show</a>
		                    </li>
		                    <li>
		                        <a href="{{ path('information_edit', { 'id': entity.id }) }}">edit</a>
		                    </li>
		                </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    
{% endblock %}
