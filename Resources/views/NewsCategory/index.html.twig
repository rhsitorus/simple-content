{% extends 'RofilTemplateMasterBundle:Theme:two-column.html.twig' %}

{% block content -%}
    <h2>Daftar NewsCategory</h2>
    <hr>
                    <a href="{{ path('newscategory_new') }}" class="btn btn-primary">Tambah Data</a>
            <hr>

    <div class="panel panel-default">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('newscategory_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.description }}</td>
                    <td>
		                <ul>
		                    <li>
		                        <a href="{{ path('newscategory_show', { 'id': entity.id }) }}">show</a>
		                    </li>
		                    <li>
		                        <a href="{{ path('newscategory_edit', { 'id': entity.id }) }}">edit</a>
		                    </li>
		                </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    
{% endblock %}
